    curl \
    ca-certificates \
    supervisor \
    bash \
    tzdata \
    openssl \
    wget \
    curl \
    bash \
    fcgi \
    nano \
    tidyhtml \
    php82 \
    php82-pecl-apcu \
    php82-bz2 \
    php82-common \
    php82-curl \
    php82-dom \
    php82-exif \
    php82-fileinfo \
    php82-ftp \
    php82-gd \
    php82-iconv \
